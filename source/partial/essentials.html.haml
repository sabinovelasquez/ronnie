%section.tweets
	.container{ :'ng-controller' => 'essentialsCtrl' }
		.row
			.col-sm-12
				%h2.text-center
					%span{ :'ng-show' => 'lang==1' }
						Escenciales
					%span{ :'ng-show' => 'lang==2' }
						Essentials
				%hr.center
		%p.text-center{ :'ng-hide' => 'feed' }
			Loading tweets...
		#ess.narrow
			.item{ :'ng-repeat' => 'tweet in feed.tweets | limitTo: paginationLimit() ' }
				.col-lg-6.col-sm-12
					%h3.text-center
						.tweet{ :'ng-bind-html' => 'tweet.text | linky' }

			
			.col-sm-12.text-center{ :'ng-show' => 'hasMoreItemsToShow()' }
				%a.more{ :'ng-click' => 'showMoreItems()' }
					%span{ :'ng-show' => 'lang==1' }
						(ver mÃ¡s)
					%span{ :'ng-show' => 'lang==2' }
						(view more)	
			.col-sm-12.text-center{ :'ng-show' => 'hasLessItemsToShow()' }
				%a.less{ :'ng-click' => 'showLessItems()' }
					%span{ :'ng-show' => 'lang==1' }
						ver menos
					%span{ :'ng-show' => 'lang==2' }
						view less