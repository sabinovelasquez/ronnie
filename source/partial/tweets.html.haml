%section.tweets
	.container{ :'ng-controller' => 'twitterCtrl' }
		.row
			.col-sm-12
				%h2.text-center
					%span{ :'ng-show' => 'lang==1' }
						Escenciales
					%span{ :'ng-show' => 'lang==2' }
						Essentials
				%hr.center
		%p.text-center{ :'ng-hide' => 'feed' }
			Loading tweets...
		#tweets.narrow
			.item{ :'ng-repeat' => 'tweet in feed.tweets | limitTo: 3 ' }
				.col-sm-4
					%h3.text-center
						.tweet{ :'ng-bind-html' => 'tweet.text | linky' }


	